{
  "$schema": "https://ui.shadcn.com/schema/registry.json",
  "name": "slot",
  "homepage": "https://slot-ui.com",
  "items": [
    {
      "name": "theme",
      "type": "registry:theme",
      "description": "Slot UI design tokens, dark mode, corner shape utility, and base styles.",
      "cssVars": {
        "theme": {
          "--color-background": "var(--color-white)",
          "--color-foreground": "var(--color-neutral-800)",
          "--color-card": "var(--color-white)",
          "--color-card-foreground": "var(--color-neutral-800)",
          "--color-popover": "var(--color-white)",
          "--color-popover-foreground": "var(--color-neutral-800)",
          "--color-primary": "var(--color-blue-500)",
          "--color-primary-foreground": "var(--color-white)",
          "--color-secondary": "var(--color-neutral-100)",
          "--color-secondary-foreground": "var(--color-neutral-800)",
          "--color-muted": "var(--color-neutral-100)",
          "--color-muted-foreground": "var(--color-neutral-600)",
          "--color-accent": "var(--color-neutral-100)",
          "--color-accent-foreground": "var(--color-neutral-800)",
          "--color-border": "var(--color-neutral-200)",
          "--color-input": "var(--color-neutral-200)",
          "--color-ring": "var(--color-blue-200)",
          "--color-destructive": "var(--color-red-500)",
          "--color-destructive-foreground": "var(--color-red-800)",
          "--color-success": "var(--color-green-600)",
          "--color-success-foreground": "var(--color-green-800)",
          "--color-warning": "var(--color-amber-500)",
          "--color-warning-foreground": "var(--color-amber-800)",
          "--font-sans": "var(--font-geist-sans)",
          "--font-mono": "var(--font-geist-mono)",
          "--shape": "squircle",
          "--radius": "3rem",
          "--radius-xs": "calc(var(--radius) - 6px)",
          "--radius-sm": "calc(var(--radius) - 4px)",
          "--radius-md": "calc(var(--radius) - 2px)",
          "--radius-lg": "var(--radius)",
          "--radius-xl": "calc(var(--radius) + 6px)",
          "--radius-2xl": "calc(var(--radius) + 10px)",
          "--radius-3xl": "calc(var(--radius) + 16px)",
          "--radius-4xl": "calc(var(--radius) + 22px)"
        },
        "dark": {
          "--color-background": "var(--color-neutral-950)",
          "--color-foreground": "var(--color-neutral-200)",
          "--color-card": "var(--color-neutral-950)",
          "--color-card-foreground": "var(--color-neutral-200)",
          "--color-popover": "var(--color-neutral-950)",
          "--color-popover-foreground": "var(--color-neutral-200)",
          "--color-primary": "var(--color-blue-600)",
          "--color-primary-foreground": "var(--color-white)",
          "--color-secondary": "var(--color-neutral-800)",
          "--color-secondary-foreground": "var(--color-neutral-200)",
          "--color-muted": "var(--color-neutral-800)",
          "--color-muted-foreground": "var(--color-neutral-400)",
          "--color-accent": "var(--color-neutral-800)",
          "--color-accent-foreground": "var(--color-neutral-200)",
          "--color-border": "var(--color-neutral-800)",
          "--color-input": "var(--color-neutral-800)",
          "--color-ring": "var(--color-blue-900)",
          "--color-destructive": "var(--color-red-500)",
          "--color-destructive-foreground": "var(--color-red-500)",
          "--color-success": "var(--color-green-500)",
          "--color-success-foreground": "var(--color-green-500)",
          "--color-warning": "var(--color-amber-500)",
          "--color-warning-foreground": "var(--color-amber-500)"
        }
      },
      "css": {
        "@custom-variant dark": "(&:is(.dark *))",
        "@utility corner-shape": {
          "@supports (corner-shape: round)": {
            "corner-shape": "var(--shape)"
          }
        },
        "@layer base": {
          "*": {
            "border-color": "var(--color-border)",
            "outline-color": "var(--color-primary)",
            "@apply": "focus-visible:ring-ring outline-none focus-visible:ring-3"
          },
          "body": {
            "@apply": "bg-background text-foreground relative antialiased"
          },
          ".root": {
            "@apply": "isolate"
          }
        }
      }
    },
    {
      "name": "utils",
      "type": "registry:lib",
      "description": "Utility functions for Slot UI components.",
      "dependencies": ["tailwind-merge", "clsx"],
      "files": [
        {
          "path": "lib/utils.ts",
          "type": "registry:lib"
        }
      ]
    },
    {
      "name": "ui",
      "type": "registry:item",
      "title": "All Components",
      "description": "Install all Slot UI components.",
      "registryDependencies": [
        "accordion",
        "alert-dialog",
        "avatar",
        "button",
        "checkbox",
        "collapsible",
        "dialog",
        "input",
        "label",
        "popover",
